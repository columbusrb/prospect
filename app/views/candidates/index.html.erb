<h1>Candidates</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Bio</th>
      <th>Professional</th>
      <th>Picture</th>
      <th>Why</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td><%= candidate.bio %></td>
        <td><%= candidate.professional %></td>
        <td><%= candidate.picture %></td>
        <td><%= candidate.why %></td>
        <td><%= candidate.user_id %></td>
        <td><%= link_to 'Show', candidate %></td>
        <% if candidate.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Candidate', new_candidate_path %>
